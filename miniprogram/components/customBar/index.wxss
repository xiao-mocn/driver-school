.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 100rpx;
  background-color: #fff;
}

.tab-item {
  flex-grow: 1;
  text-align: center;
  font-size: 32rpx;
  color: #2e2e2e;
  line-height: 100rpx;
  border: 2rpx solid #ededed;
}
.tab-item:active {
  background: #e6ecf8;
}
.border-left-radius {
  border-right: 0rpx solid #ededed;
}