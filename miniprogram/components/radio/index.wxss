.radio-container {
  display: flex;
  align-items: center;
}

.custom-radio {
  width: 20rpx;
  height: 20rpx;
  background-color: #fff; /* 背景颜色 */
  border: 2rpx solid #000; /* 边框颜色 */
  border-radius: 50%; /* 圆形 */
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.custom-radio.checked {
  background-color: #000; /* 选中时的背景颜色 */
  color: #fff; /* 选中时的字体颜色 */
}

label {
  margin-left: 10px;
  font-size: 28rpx;
  color: rgb(45, 44, 44);
}