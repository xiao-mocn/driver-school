/* 隐藏默认的 checkbox */
.checkbox-hidden {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}

/* 自定义复选框容器 */
.custom-checkbox {
  width: 20rpx; /* 自定义宽度 */
  height: 20rpx; /* 自定义高度 */
  background-color: #fff; /* 背景颜色 */
  border: 2rpx solid #000; /* 边框颜色 */
  border-radius: 3rpx; /* 圆角 */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16rpx; /* 字体大小 */
  position: relative;
}

/* 选中时的样式 */
.custom-checkbox.checked {
  background-color: #000; /* 选中时的背景颜色 */
  color: #fff; /* 选中时的字体颜色 */
}

