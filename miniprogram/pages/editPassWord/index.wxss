
page {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  height: 100vh;
}
.form {
  width: 630rpx;
  height: calc(100vh - 500rpx);
  padding: 30rpx;
  margin-top: 50rpx;
  background-color: #FFF;
  border-radius:  20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.form .item {
  position: relative;
  display: flex;
  align-items: center;
  width: 630rpx;
  min-height: 40rpx;
  padding: 40rpx 0;
}
.form .item .icon {
  font-size: 30rpx;
  color: crimson;
  position: relative;
}
.form .item .label {
  position: relative;
  margin-left: 10rpx;
  font-size: 34rpx;
  color: rgb(45, 44, 44);
  line-height: 50rpx;
}
.form .item input {
  margin-left: 20rpx;
  height: 50rpx;
  flex: 1;
  font-size: 34rpx;
  color: rgb(45, 44, 44);
}
/* 修改 placeholder 样式 */
.form .item .placeholder {
  color: #888;
  font-size: 30rpx;
  line-height: 34rpx;
  font-style: italic;
}
.form .item .radios {
  display: flex;
  flex: 1;
  align-items: center;
  margin-left: 30rpx;
  flex-wrap: wrap;
}
.bottom-btn {
  width: 690rpx;
  height: 80rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom-btn .btn {
  width: 300rpx;
  height: 80rpx;
  background-color: rgb(43, 108, 242);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFF;
  font-size: 30rpx;
  font-weight: 400;
  border-radius: 20rpx;
}
.bottom-btn .cancel {
  background-color: rgb(255, 255, 255);
  color: #4b4a4a;
}

.btn:active {
  background-color: #005bb5;
}