<view>
  <!-- 轮播图 -->
  <view class="top swiper-container">
    <swiper autoplay indicator-dots circular>
      <swiper-item wx:for="{{ carouselImages }}" wx:key="id">
        <image bindtap="handleCarousel" mode="widthFix" src="{{item.url}}"></image>
      </swiper-item>
    </swiper>
  </view>
  <view class="notice clearfix">
    <view class="notice-left clearfix">
      <text>通知公告</text>
    </view>
    <navigator class="notice-righ clearfix" url="/pages/_index/gonggao/gonggao" open-type="navigate">
      <swiper autoplay="true" circular="true" class="swiper_container" interval="7000" vertical="true">
        <swiper-item wx:for="{{noticeArr}}" wx:key="id">
          <view class="swiper_item">{{item.title}}</view>
        </swiper-item>
      </swiper>
    </navigator>
  </view>
  <view class="content">
    
    <view class="icons">
      <navigator wx:for="{{iconArr}}" wx:key="id" url="{{item.pageAddress}}" open-type="navigate">
        <image mode="widthFix" src="{{item.iconUrl}}"></image>
        <view class="text">{{item.iconName}}</view>
      </navigator>
    </view>
  </view>
</view>