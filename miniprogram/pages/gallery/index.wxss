
page {
  position: relative;
  width: 750rpx;
}
.container {
  padding: 30rpx;
  position: relative;
}

.item {
  padding-top: 30rpx;
  margin-bottom: 20rpx;
  width: 690rpx;
}

.image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.item .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
  text-align: center;
}
.description {
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
  text-indent: 2em; /* 设置首行缩进 */
}
