
<view class="base-info">
  <view class="title">
    <view class="icon" ></view>
    <text>基本信息</text>
  </view>
  <view class="form">
    <view class="item">
      <text class="icon">*</text>
      <text class="label">学员姓名: </text>
      <input base-input="true" placeholder-class="placeholder" placeholder="请输入姓名(必填)" />
    </view>
    <view class="item">
      <text class="icon">*</text>
      <text class="label">身份证号: </text>
      <input base-input="true" placeholder-class="placeholder" placeholder="请输入身份证号" />
    </view>
    <view class="item">
      <text class="icon">*</text>
      <text class="label">出生年月: </text>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2999-09-01" bindchange="bindDateChange">
        <view class="picker">{{dwate}}</view>
      </picker>
      <!-- <input base-input="true" placeholder-class="placeholder" placeholder="请输入出生年月" /> -->
    </view>
    <view class="item">
      <text class="icon">*</text>
      <text class="label">学员性别: </text>
      <view class="radios">
        <custom-radio
          name="男"
          checked="{{ checkedValue === 'man' }}"
          value="man"
          bindchange="handleRadioChange"
        />
        <custom-radio
          name="女"
          checked="{{ checkedValue === 'women' }}"
          value="women"
          style="margin-left: 30rpx"
          bindchange="handleRadioChange"
        />
      </view>
    </view>
    <view class="item">
      <text class="icon">*</text>
      <text class="label">手机号码: </text>
      <input base-input="true" placeholder-class="placeholder" placeholder="请输入出生年月" />
    </view>
  </view>
</view>
<view class="school-info">
  <view class="title">
    <view class="icon"></view>
    <text>驾校信息</text>
  </view>
  <view class="form">
    <view class="item">
      <text class="icon">*</text>
      <text class="label">报考驾校: </text>
      <input base-input="true" placeholder-class="placeholder" placeholder="请输入姓名(必填)" />
    </view>
    <view class="item">
      <text class="icon">*</text>
      <text class="label">报班类型: </text>
