        />
        <custom-radio
          class="custom-radio-item"
          name="A1"
          checked="{{ checkedValue === 'women' }}"
          value="A1"
          bindchange="handleRadioChange"
        />
        <custom-radio
          class="custom-radio-item"
          name="A2"
          checked="{{ checkedValue === 'women' }}"
          value="A2"
          style="margin-left: 30rpx"
          bindchange="handleRadioChange"
        />
        <custom-radio
          class="custom-radio-item"
          name="A3"
          checked="{{ checkedValue === 'women' }}"
          value="A3"
          style="margin-left: 30rpx"
          bindchange="handleRadioChange"
        />
        <custom-radio
          class="custom-radio-item"
          name="B1"
          checked="{{ checkedValue === 'women' }}"
          value="B1"
          style="margin-left: 30rpx"
          bindchange="handleRadioChange"
        />
        <custom-radio
          class="custom-radio-item"
          name="B2"
