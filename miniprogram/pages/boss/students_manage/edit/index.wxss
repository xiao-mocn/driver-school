page {
  position: relative;
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 750rpx;
  background-color: rgb(246, 246, 246);
  padding-bottom: 40rpx;
}

.base-info {
  position: relative;
  width: 630rpx;
  /* height: 340rpx; */
  padding: 30rpx;
  background: #FFF;
  border-radius: 30rpx;
  margin-top: 30rpx;
}
.title {
  display: flex;
  align-items: center;
  width: 100%;
  height: 50rpx;
  color: rgb(50, 50, 50);
  font-size: 30rpx;
  font-weight: 500;
  line-height: 50rpx;
}
.title .icon {
  width: 6rpx;
  height: 40rpx;
  border-radius: 6rpx;
  background: rgb(43, 108, 242);
  margin-right: 20rpx;
}

.school-info {
  position: relative;
  width: 630rpx;
  padding: 30rpx;
  background: #FFF;
  border-radius: 30rpx;
  margin-top: 30rpx;
}

.form {
  width: 630rpx;
  margin-top: 20rpx;
}
.form .item {
  position: relative;
  display: flex;
  align-items: center;
  width: 630rpx;
  min-height: 40rpx;
  padding: 10rpx 0;
}
.form .item .icon {
  font-size: 30rpx;
  color: crimson;
  position: relative;
}
.form .item .label {
  position: relative;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: rgb(45, 44, 44);
}
.form .item input {
  margin-left: 20rpx;
  height: 40rpx;
  flex: 1;
  font-size: 30rpx;
  color: rgb(45, 44, 44);
}
/* 修改 placeholder 样式 */
.form .item .placeholder {
  color: #888;
  font-size: 26rpx;
  font-style: italic;
}
.form .item .radios {
  display: flex;
  flex: 1;
  align-items: center;
  margin-left: 30rpx;
  flex-wrap: wrap;
}
.picker{
  padding: 14rpx;
  background-color: #FFFFFF;
  font-size: 30rpx;
  color: rgb(45, 44, 44);
}
.custom-radio-item {
  width: 84rpx;
  margin-bottom: 10rpx;
}
.bottom-btn {
  width: 690rpx;
  height: 80rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom-btn .btn {
  width: 300rpx;
  height: 80rpx;
  background-color: rgb(43, 108, 242);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFF;
  font-size: 30rpx;
  font-weight: 400;
  border-radius: 20rpx;
}
.bottom-btn .cancel {
  background-color: rgb(255, 255, 255);
  color: #4b4a4a;
}

.bottom-btn:active {
  background-color: #005bb5;
}
/* 隐藏默认的 checkbox */
.checkbox-hidden {
  position: absolute;
  opacity: 0;
  width: 0;
  height: 0;
}