
<view class="base-info">
  <view class="title">
    <view class="icon" ></view>
    <text>基本信息</text>
  </view>
  <view class="form">
    <view class="item">
      <text class="icon">*</text>
      <text class="label">教练姓名: </text>
      <input
        value="{{formData.name}}"
        data-name="name"
        bindinput="inputChange"
        base-input="true"
        placeholder-class="placeholder"
        placeholder="请输入姓名(必填)" />
    </view>
    <view class="item">
      <text class="icon">*</text>
      <text class="label">身份证号: </text>
      <input
        value="{{formData.idCard}}"
        data-name="idCard"
        type="idcard"
        bindinput="inputChange"
        base-input="true"
        placeholder-class="placeholder"
        placeholder="请输入身份证号" />
    </view>
    <view class="item">
      <text class="icon">*</text>
      <text class="label">出生年月: </text>
      <picker
        mode="date"
        value="{{formData.birthday}}"
        data-name="birthday"
        start="1900-09-01"
        end="2999-09-01"
        bindchange="bindDateChange">
        <view class="picker">{{ formData.birthday }}</view>
      </picker>
    </view>
    <view class="item">
      <text class="icon">*</text>
      <text class="label">教练性别: </text>
      <picker
        mode="selector"
        data-name="gender"
        range="{{genders}}"
        bindchange="onPickerChange">
        <view class="picker">{{ formData.gender }}</view>
      </picker>
    </view>
    <view class="item">
      <text class="icon">*</text>
      <text class="label">手机号码: </text>
      <input
        value="{{formData.phone}}"
        data-name="phone"
        type="number"
        bindinput="inputChange"
        base-input="true"
        placeholder-class="placeholder"
        placeholder="请输入手机号码" />
    </view>
  </view>
</view>
